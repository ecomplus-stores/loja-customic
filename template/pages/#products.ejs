<%
const { body } = await _.resolveRoute()
_.breadcrumbs = []
_.ecomUtils.categoriesList(body).forEach(categoryName => {
  console.log(categoryName)
  const findCategory = category => category.name === categoryName
  const category = _.categories.find(findCategory) || (body.categories && body.categories.find(findCategory))

  if (category) {
    console.log(category)
    if (category.parent) {
      _.breadcrumbs.push({
        name: category.parent.name,
        link: `/${category.parent.slug}`
      })
    } else {
      _.breadcrumbs.push({
        name: _.ecomUtils.name(category),
        link: `/${category.slug}`
      })
    }
  }
})
_.breadcrumbs.push({
  name: _.ecomUtils.name(body),
  link: `/${body.slug}`
})
console.log(_.breadcrumbs)
%>

<%- await include('@/view') %>
